<h2> 新增產品 </h2>

<div class="col-md-8">
  <%= simple_form_for [:admin, @product ] , :html => { :class => "form-horizontal"  } do |f| %>

  <div class="form-group">
    
    <div class="col-md-6">
      <%= f.input :title %>
    </div>
  </div>
  
  <div class="form-group">
    
    <div class="col-md-6">
      <%= f.input :description, :as => :text %>
    </div>
  </div>
  
  
  
  <div class="form-group">
    
    <div class="col-md-6">
      <%= f.input :quantity %>
    </div>
  </div>


  <div class="form-group">
    <%= f.submit "Submit", :class => "btn btn-default" , :disable_with => 'Submiting...' %>
  </div>

  <% end %>
</div>
